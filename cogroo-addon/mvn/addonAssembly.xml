<assembly>
    <id>bin.oxt</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/cogroo</directory>
            <outputDirectory>registry/data/br/usp/ime/ccsl/cogroo/oooext</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <filtered>false</filtered>

            <includes>
                <include>data/**</include>
                <include>rules/**</include>
                <include>schema/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src</directory>
            <outputDirectory></outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <filtered>true</filtered>
            <includes>
                <include>*.properties</include>
                <include>description.xml</include>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>images</directory>
            <outputDirectory>images</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>description</directory>
            <outputDirectory>description</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>registry</directory>
            <outputDirectory>registry</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/uno-extension-manifest.xml</source>
            <outputDirectory>META-INF</outputDirectory>
            <destName>manifest.xml</destName>
        </file>
        <file>
            <source>target/${pom.artifactId}-${pom.version}.jar</source>
            <outputDirectory></outputDirectory>
            <destName>${pom.artifactId}.jar</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
            <useProjectAttachments>false</useProjectAttachments>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
        </dependencySet>
    </dependencySets>
</assembly>